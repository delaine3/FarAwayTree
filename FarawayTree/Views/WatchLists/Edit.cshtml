@model FarawayTree.Models.WatchList

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>WatchList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OnAir" /> @Html.DisplayNameFor(model => model.OnAir)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SeasonStart" class="control-label"></label>
                <input asp-for="SeasonStart" class="form-control" />
                <span asp-validation-for="SeasonStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeasonEnd" class="control-label"></label>
                <input asp-for="SeasonEnd" class="form-control" />
                <span asp-validation-for="SeasonEnd" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Watched" /> @Html.DisplayNameFor(model => model.Watched)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
